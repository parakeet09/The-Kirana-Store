<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".retailerwholesaler.HomeRetailerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/product_name_wholesaler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apples"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/product_image_wholesaler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/apple"
            android:layout_below="@+id/product_name_wholesaler"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/product_price_wholesaler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_wholesaler"
            android:text="Rs 400"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/product_description_wholesaler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_wholesaler"
            android:text="A dozen good quality apples"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            />




    </RelativeLayout>

</androidx.cardview.widget.CardView>