<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerpage"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/wholesaler_register_app_logo"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logowithouttagline"/>

    <EditText
        android:id="@+id/wholesaler_register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:layout_marginRight="215dp"
        android:layout_marginLeft="60dp"
        android:text=" Sign-up"
        android:textSize="25dp"
        android:layout_below="@+id/wholesaler_register_app_logo"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/wholesaler_register_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wholesaler_register_text"
        android:layout_marginTop="15dp"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:hint="Name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/wholesaler_register_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wholesaler_register_name_input"
        android:layout_marginTop="15dp"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:hint="Username"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/wholesaler_register_phonenumber_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wholesaler_register_username_input"
        android:layout_marginTop="15dp"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:inputType="number"
        android:textColor="@color/black"
        android:hint="Phone Number"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/wholesaler_register_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wholesaler_register_phonenumber_input"
        android:layout_marginTop="15dp"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:textColor="@color/black"
        android:hint="Password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/wholesaler_register_confirm_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wholesaler_register_password_input"
        android:layout_marginTop="10dp"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:textColor="@color/black"
        android:hint="Confirm Password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/wholesaler_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wholesaler_register_confirm_password_input"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:text="Create Account"
        android:backgroundTint="@color/purple_200"
        />

</RelativeLayout>