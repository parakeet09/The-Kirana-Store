<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WholesalerConfirmFinalOrder">

    <TextView
        android:id="@+id/txt_wholesaler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Confirm your Shipment Details"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/shipment_name_wholesaler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_wholesaler"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Name"/>
    <EditText
        android:id="@+id/shipment_phone_number_wholesaler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_name_wholesaler"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your PhoneNumber"
        android:inputType="number"/>
    <EditText
        android:id="@+id/shipment_address_wholesaler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_phone_number_wholesaler"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Home Address"/>

    <EditText
        android:id="@+id/shipment_city_wholesaler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_address_wholesaler"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your City Name"/>

    <Button
        android:id="@+id/confirm_final_order_btn_wholesaler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm Order"
        android:background="@drawable/input_design"
        android:textSize="20dp"/>

</RelativeLayout>