<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Retailer_Login_Activity">


    <ImageView
        android:id="@+id/wholesaler_login_app_logo"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logowithouttagline"/>

    <TextView
        android:id="@+id/wholesaler_login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginEnd="220dp"
        android:layout_marginStart="60dp"
        android:text=" Sign-in"
        android:textSize="25sp"
        android:layout_below="@+id/wholesaler_login_app_logo"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/wholesaler_login_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wholesaler_login_text"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttons"
        android:padding="15dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:hint="Username"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/wholesaler_login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:background="@drawable/buttons"
        android:layout_below="@id/wholesaler_login_username_input"
        android:inputType="textPassword"
        android:hint="Password"
        android:textStyle="bold"
        />





    <Button
        android:id="@+id/wholesaler_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wholesaler_login_password_input"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttons"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Login"
        android:backgroundTint="@color/purple_200"
        />

</RelativeLayout>